{
  "name": "ass.js",
  "description": "A JavaScript renderer for ASS subtitle format.",
  "main": "dist/ass.js",
  "module": "dist/ass.esm.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "rollup -c -w",
    "lint": "eslint src test",
    "unit": "karma start",
    "test": "npm run lint",
    "bundle": "rollup -c",
    "minify": "uglifyjs dist/ass.js -m -o dist/ass.min.js",
    "build": "npm run bundle && npm run minify",
    "preversion": "npm test",
    "version": "npm run build && git add -A ./dist",
    "postversion": "git push && git push --tags && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weizhenye/ASS.git"
  },
  "keywords": [
    "ASS",
    "subtitle",
    "renderer"
  ],
  "author": "Zhenye Wei",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/weizhenye/ASS/issues"
  },
  "homepage": "https://ass.js.org/",
  "devDependencies": {
    "ass-compiler": "^0.0.1",
    "csso": "^3.2.0",
    "eslint": "^4.8.0",
    "eslint-config-airbnb-base": "^12.0.1",
    "eslint-plugin-import": "^2.7.0",
    "rollup": "^0.50.0",
    "rollup-plugin-buble": "^0.16.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "uglify-js": "^3.1.3"
  }
}
